@page
@model ecommerce.Pages.EstimateModel
@{
    ViewData["Title"] = "Estimate";
}
<link rel="stylesheet" href="~/css/estimate.css" />


<main class="container">
</div>
<div>
<label for="contact">Personne de contact</label>
<input id="contact" name="contact" type="text" required placeholder="Prénom Nom" />
</div>


<div>
<label for="email">Email</label>
<input id="email" name="email" type="email" required placeholder="contact@exemple.com" />
</div>
<div>
<label for="phone">Téléphone</label>
<input id="phone" name="phone" type="tel" placeholder="06 00 00 00 00" />
</div>


<div>
<label for="address">Adresse</label>
<input id="address" name="address" type="text" placeholder="Adresse du client" />
</div>
<div>
<label for="date">Date du devis</label>
<input id="date" name="date" type="date" required />
</div>
</section>


<section style="margin-top:8px">
<label for="project"></label>
        <form>
            <fieldset>
                <legend>Choix des reparations</legend>

                <div class="choice">
                    <input type="radio" id="cardant" name="cardant" value="200" checked />
                    <label for="huey">Changer les cardants prix 200 euro</label>
                </div>

                <div class="choice">
                    <input type="radio" id="distri" name="distri" value="700" />
                    <label for="dewey">Distribution prix 700 euro</label>
                </div>

                <div class="choice">
                    <input type="radio" id="Entretient" name="Entretient" value="400" />
                    <label for="louie">Entretient complete 400 euro </label>
                </div>
            </fieldset>

        </form>



<section style="margin-top:6px">
<label>Prestations & Matériels</label>
<table id="itemsTable">
<thead>
<tr>
<th style="width:42%">Désignation</th>
<th style="width:16%">Quantité</th>
<th style="width:18%">Prix unitaire (€)</th>
<th style="width:18%">Total (€)</th>
<th style="width:6%"></th>
</tr>
</thead>
<tbody id="itemsBody">
<!-- rows injected by JS -->
</tbody>
</table>
<div style="margin-top:8px;display:flex;justify-content:flex-end">
<button type="button" class="btn ghost" onclick="addItem()">➕ Ajouter une ligne</button>
</div>
</section>


<section class="summary">
<div class="line"><div class="label">Sous-total :</div><div id="subTotal">0,00 €</div></div>
<div class="line"><div class="label">Remise (€) :</div><input id="discount" type="number" min="0" step="0.01" value="0" oninput="recalculate()" /></div>
<div class="line"><div class="label">TVA (%) :</div><input id="vat" type="number" min="0" max="100" step="0.1" value="20" oninput="recalculate()" /></div>
<div class="line" style="font-weight:700;font-size:16px"><div class="label">Total TTC :</div><div id="grandTotal">0,00 €</div></div>
</section>


<section class="notes">
<label for="payment">Conditions de paiement</label>
<textarea id="payment" name="payment" placeholder="Ex : 30% à la commande, solde à livraison">30% d'acompte à la commande, solde à 30 jours</textarea>
<div style="margin-top:8px">Mentions légales / Notes :
<textarea id="notes" name="notes" placeholder="Informations supplémentaires..." style="margin-top:6px">Devis valable 30 jours. TVA non applicable, art. 293 B du CGI (si applicable)</textarea>
</div>
</section>


<div class="actions">
<button type="button" class="btn ghost" onclick="resetForm()">Réinitialiser</button>
<button type="button" class="btn" onclick="printQuote()">Imprimer / Aperçu</button>
<button type="submit" class="btn">Enregistrer / Exporter</button>
</div>



</main>


<script src="~/js/estimate.js"></script>