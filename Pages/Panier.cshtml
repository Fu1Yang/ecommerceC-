@page
@model ecommerce.Pages.PanierModel
@{
    ViewData["Title"] = "Mon Panier";
}

<h2>Mon Panier</h2>

@if (!Model.CartItems.Any())
{
    <p>Votre panier est vide.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix unitaire</th>
                <th>Quantité</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total.ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Total Panier</th>
                <th>@Model.CartItems.Sum(i => i.Total).ToString("C")</th>
            </tr>
        </tfoot>
    </table>
}
