@page
@model ecommerce.Pages.Admin.Profile.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Profiles[0].IdUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profiles[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profiles[0].Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profiles[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profiles[0].PathPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profiles[0].Adresse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Profiles) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PathPhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
