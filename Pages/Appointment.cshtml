@page
@model ecommerce.Pages.AppointmentModel
@{
    ViewData["Title"] = "Prise de rendez-vous";
}
<h1>Rendez-vous</h1>
<a href="#">Faire un devis</a>

<form method="post">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name">Votre nom</label>
                <input type="text" class="form-control" id="Name">
            </div>
        </div>

        <div class="form-group col-md-6">
            <label for="date">date du rendez-vous</label>
            <input type="datetime-local" class="form-control" id="date" placeholder="Date">
        </div>
    </div>

    <div class="form-group">
        <label for="registration">Immatriculation du vehicule</label>
        <input type="text" class="form-control" id="registration" placeholder="registration">
    </div>

    <div class="form-group">
        <label for="comment">Commentaire</label>
        <input type="text" class="form-control" id="comment" placeholder="probleme du vehicule">
    </div>

    <button type="submit" class="btn btn-primary">Valider</button>

</form>